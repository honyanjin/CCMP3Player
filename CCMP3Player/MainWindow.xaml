<Window x:Class="CCMP3Player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MP3 Player" Height="550" Width="650"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <!-- 외부 스타일 참조 -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CCMP3Player;component/Styles/PlayerStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- 윈도우 -->
    <Border CornerRadius="15"
            Background="WhiteSmoke"
            BorderBrush="Black"
            BorderThickness="1"
            MouseDown="Border_MouseDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 상단 컨트롤바 -->
            <Grid Grid.Row="0" Background="#333333" Height="30">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="✕" Width="30" Height="30" Background="Transparent" 
                            Foreground="White" BorderThickness="0" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <!-- 왼쪽 영역: 미디어 재생 및 컨트롤 -->
                <Grid Grid.Column="0" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 앨범 아트 및 정보 -->
                        <RowDefinition Height="Auto"/>
                        <!-- 미디어 플레이어 -->
                        <RowDefinition Height="Auto"/>
                        <!-- 컨트롤 패널 -->
                    </Grid.RowDefinitions>

                    <!-- 앨범 아트 및 정보 -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 앨범 아트 -->
                        <Border Grid.Column="0" Width="120" Height="120" BorderBrush="#ADB2D4" BorderThickness="1" CornerRadius="5" Margin="0,0,10,0">
                            <Image x:Name="albumArtImage" Stretch="UniformToFill" Source="/CCMP3Player;component/Resources/default_album.png"/>
                        </Border>

                        <!-- 노래 정보 -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="songTitleText" Text="No Track Selected" FontSize="18" FontWeight="Bold" TextWrapping="Wrap"/>
                            <TextBlock x:Name="artistText" Text="Unknown Artist" FontSize="14" Margin="0,5,0,0" TextWrapping="Wrap"/>
                            <TextBlock x:Name="albumText" Text="Unknown Album" FontSize="12" Foreground="#666" Margin="0,5,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>

                    <!-- MediaElement: 미디어 재생 컨트롤 -->
                    <MediaElement Grid.Row="1" x:Name="mediaElement" LoadedBehavior="Manual" UnloadedBehavior="Stop" Height="0" MediaOpened="mediaElement_MediaOpened" MediaEnded="mediaElement_MediaEnded"/>

                    <!-- 재생 컨트롤 패널 -->
                    <StackPanel Grid.Row="2">
                        <!-- 재생, 일시정지, 정지 버튼 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                            <Button x:Name="btnPrevious" Content="◀◀" Click="btnPrevious_Click" Style="{StaticResource ButtonStyle2}" Margin="5"/>
                            <Button x:Name="btnPlay" Content="▶" Click="btnPlay_Click" Style="{StaticResource ButtonStyle3}"  Margin="5"/>
                            <Button x:Name="btnPause" Content="⏸" Click="btnPause_Click" Style="{StaticResource ButtonStyle4}"  Margin="5"/>
                            <Button x:Name="btnStop" Content="⏹" Click="btnStop_Click" Style="{StaticResource ButtonStyle1}"  Margin="5"/>
                            <Button x:Name="btnNext" Content="▶▶" Click="btnNext_Click" Style="{StaticResource ButtonStyle2}"  Margin="5"/>
                        </StackPanel>

                        <!-- 볼륨 조절 슬라이더 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                            <TextBlock Text="Volume:" VerticalAlignment="Center" Margin="5"/>
                            <Slider x:Name="volumeSlider" 
                                    Minimum="0" 
                                    Maximum="1" 
                                    Value="0.5" 
                                    Width="100" 
                                    ValueChanged="volumeSlider_ValueChanged" 
                                    Margin="5"
                                    Style="{StaticResource ModernSliderStyle}"/>
                            
                            <!-- 볼륨 퍼센트 표시 추가 -->
                            <TextBlock x:Name="volumeValueText" 
                                       Text="{Binding Value, ElementName=volumeSlider, StringFormat={}{0:P0}}" 
                                       VerticalAlignment="Center" 
                                       MinWidth="35"
                                       Margin="5,5,0,5"/>
                            
                        </StackPanel>

                        <!-- 재생 시간 표시 텍스트 -->
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                            <TextBlock x:Name="playbackTimeText" Text="00:00 / 00:00" HorizontalAlignment="Center" Margin="5"/>
                            <Slider x:Name="seekBar" Minimum="0" Maximum="100" Value="0" Width="250"
                                    PreviewMouseDown="seekBar_PreviewMouseDown"
                                    PreviewMouseUp="seekBar_PreviewMouseUp"
                                    Style="{StaticResource ModernSliderStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- 오른쪽 영역: 플레이리스트 -->
                <Grid Grid.Column="1" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button x:Name="btnLoad" Content="Add MP3" Grid.Row="0" Click="btnLoad_Click" Style="{StaticResource ButtonStyle0}" Margin="5"/>

                    <ListBox x:Name="playlistListBox" 
                             Grid.Row="1" 
                             Margin="5" 
                             SelectionChanged="playlistListBox_SelectionChanged" 
                             MouseDoubleClick="PlaylistListBox_MouseDoubleClick"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}" TextTrimming="CharacterEllipsis" ToolTip="{Binding DisplayName}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="btnRemove" Content="Remove" Click="btnRemove_Click" Style="{StaticResource ButtonStyle0}" Width="75" Margin="5"/>
                        <Button x:Name="btnClearAll" Content="Clear All" Click="btnClearAll_Click" Style="{StaticResource ButtonStyle0}" Width="75" Margin="5"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>